{% extends 'base_template.html.twig' %}

{% block title %}
    VHS | Quizz
{% endblock %}

{% block content %}
<main class="container min-vh-100">
    <br>
    <h2>{{ quizz.getTitre() }}</h2>
    <br>
	{% set bonnesReponses = 0 %}

    {% for question in questions %}
	<!-- URL de l'image de la question -->
        <div class="row">
            <img src="images/{{ question.getUrlImage() }}" alt="Image de la question">
        </div>
		<!-- Carte de la question -->
		<h4 class="row">Question n°{{ question.getRang() }}</h4>
		<div class="row">
			<div class="card">
				<div class="card-body">
					{{ question.getValeur() }}
				</div>
			</div>
        </div>
		{% for reponse in reponses %}
		<!-- Afficher 2 par 2 si le nombre de questions est pair-->
			{% if loop.index is even %}
        		<div class="row">
    		{% endif %}
		<!-- Cartes des réponses -->
			<div class="col-md-6">
				<div class="card">
					<div class="card-body">
					Réponse n°{{ reponse.getRang() }} :<br>
						{{ reponse.getValeur() }}
					</div>
					<!-- Si la réponse est vraie, ajouter 1 au nombre de bonnes réponses -->
					{% if reponse.getVerite() %}
                        {% set bonnesReponses = bonnesReponses + 1 %}
                    {% endif %}
				</div>
        	</div>
			<br>
		{% endfor %}
    {% endfor %}
	<a href="index.php?controller=quizz&methode=afficherResultats&idUtilisateur &idQuizz={{ quizz.getId() }}&bonnesReponses" class="btn btn-primary">
		<b>Voir les résultats</b>
	</a>
</main>
{% endblock %}
