{% extends 'base_template.html.twig' %}

{% block content %}
    <main class="watchlists-page container">
        <!-- Section Favoris -->
        <section class="watchlist-section mb-5">
            <h2 class="watchlist-section__title">Favoris</h2>
            <div class="watchlist-carousel position-relative">
                <button class="carousel-control-prev" type="button">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <div class="watchlist-grid d-flex overflow-hidden">
                    {% if favoris is not empty %}
                        {% for film in favoris %}
                            <div class="movie-card me-3">
                                <img 
                                    src="{{ film.lienAffiche }}" 
                                    alt="{{ film.titre }}" 
                                    class="movie-card__image shadow rounded"
                                    style="width: 200px; height: 300px; object-fit: cover;"
                                >
                                <div class="movie-card__rating mt-2">{{ film.note }}/5</div>
                                <div class="movie-card__title">{{ film.titre }}</div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-center">Aucun favori pour le moment</p>
                    {% endif %}
                </div>
                <button class="carousel-control-next" type="button">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>
        </section>

        <!-- Section Ma Watchlist -->
        <section class="watchlist-section mb-5">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="watchlist-section__title">MonNomDeWatchList</h2>
                <button class="btn btn-myprimary" data-bs-toggle="modal" data-bs-target="#editWatchlistModal">
                    <i class="bi bi-pencil"></i>
                </button>
            </div>
            <div class="watchlist-carousel position-relative">
                <!-- Même structure que pour les favoris -->
            </div>
        </section>

        <!-- Section Watchlists enregistrées -->
        <section class="watchlist-section mb-5">
            <h2 class="watchlist-section__title">WatchLists enregistrées</h2>
            {% if watchlists is not empty %}
                {% for watchlist in watchlists %}
                    <div class="watchlist-block mb-4">
                        <h3 class="watchlist-block__title">{{ watchlist.nom }}</h3>
                        <div class="watchlist-carousel position-relative">
                            <!-- Structure similaire pour chaque watchlist -->
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </section>

        <!-- Bouton Parcourir -->
        <div class="text-center mb-5">
            <a href="/watchlists/communaute" class="btn btn-myprimary btn-lg">
                Parcourir les watchlists de la communauté
            </a>
        </div>
    </main>

    <!-- Modal Édition Watchlist -->
    <div class="modal fade" id="editWatchlistModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-mydark text-white">
                <div class="modal-header">
                    <h5 class="modal-title">Éditer ma watchlist</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/watchlist/edit" method="POST">
                        <div class="mb-3">
                            <label for="watchlistName" class="form-label">Nom de la watchlist</label>
                            <input type="text" class="form-control" id="watchlistName" name="nom" required>
                        </div>
                        <div class="mb-3">
                            <label for="watchlistDesc" class="form-label">Description</label>
                            <textarea class="form-control" id="watchlistDesc" name="description" rows="3"></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="watchlistPublic" name="estPublique">
                            <label class="form-check-label" for="watchlistPublic">Watchlist publique</label>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-myprimary">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    {{ parent() }}
    <script src="JS/watchlist-carousel.js"></script>
{% endblock %}