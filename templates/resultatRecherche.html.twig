{% extends "base_template.html.twig" %}

{% block title %}Résultat de la recherche
{% endblock %}

{% block content %}
	<div class="container-fluid px-4">
		<h2 class="search-results-title text-center">"{{ recherche }}"</h2>

		<!-- Films correspondants -->
		{% if contenus|length > 0 %}
			<section class="search-results-section">
				<div class="section-header d-flex justify-content-between align-items-center">
					<h3>Films correspondants</h3>
					<span class="results-count">({{ contenus|length }}
						résultats)</span>
				</div>

				<div id="filmCarousel" class="carousel slide results-carousel" data-bs-ride="carousel">
					<div class="carousel-inner">
						{% for filmsBatch in contenus|batch(3, '') %}
							<div class="carousel-item {% if loop.first %}active{% endif %}">
								<div class="row g-4">
									{% for film in filmsBatch %}
										{% if film != '' %}
											<div class="col-12 col-sm-6 col-md-4">
												<div class="result-card card">
													<img src="{{ film.lienAfficheReduite }}" class="card-img-top" alt="{{ film.titre }}">
													<div class="card-body">
														<h5 class="card-title {% if film.titre|length > 20 %}long-title{% endif %}">
															{{ film.titre }}
														</h5>
														<p class="card-text">{{ film.description|slice(0, 100) ~ '...' }}</p>
													</div>
													<div class="card-footer text-center">
														<a href="index.php?controller=contenu&methode=afficherContenu&tmdb_id={{ film.id }}" class="btn btn-myprimary">Voir le film</a>
													</div>
												</div>
											</div>
										{% endif %}
									{% endfor %}
								</div>
							</div>
						{% endfor %}
					</div>

					{% if contenus|length > 3 %}
						<button class="carousel-control-prev" type="button" data-bs-target="#filmCarousel" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Précédent</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#filmCarousel" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Suivant</span>
						</button>

						<div class="carousel-indicators">
							{% for batch in contenus|batch(3) %}
								<button type="button" data-bs-target="#filmCarousel" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" aria-current="true" {% endif %} aria-label="Slide {{ loop.index }}"></button>
							{% endfor %}
						</div>
					{% endif %}
				</div>
			</section>
		{% endif %}

		<!-- Séries correspondantes -->
		<section class="search-results-section">
			<div class="section-header d-flex justify-content-between align-items-center">
				<h3>Séries correspondantes</h3>
				<span class="results-count">({{ series|length }}
					résultats)</span>
			</div>

			<div id="SerieCarousel" class="carousel slide results-carousel" data-bs-ride="carousel">
				<div class="carousel-inner">
					{% for serieBatch in series|batch(3, '') %}
						<div class="carousel-item {% if loop.first %}active{% endif %}">
							<div class="row g-4">
								{% for serie in serieBatch %}
									{% if serie != '' %}
										<div class="col-12 col-sm-6 col-md-4">
											<div class="result-card card">
												<img src="{{ serie.lienAfficheReduite }}" class="card-img-top" alt="{{ serie.titre }}">
												<div class="card-body">
													<h5 class="card-title {% if serie.titre|length > 20 %}long-title{% endif %}">
														{{ serie.titre }}
													</h5>
													<p class="card-text">{{ serie.description|slice(0, 100) ~ '...' }}</p>
												</div>
												<div class="card-footer text-center">
													<a href="index.php?controller=serie&methode=afficherSerie&tmdb_id={{ serie.id }}" class="btn btn-myprimary">Voir la série</a>
												</div>
											</div>
										</div>
									{% endif %}
								{% endfor %}
							</div>
						</div>
					{% endfor %}
				</div>

				{% if series|length > 3 %}
					<button class="carousel-control-prev" type="button" data-bs-target="#SerieCarousel" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Précédent</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#SerieCarousel" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Suivant</span>
					</button>

					<div class="carousel-indicators">
						{% for batch in series|batch(3) %}
							<button type="button" data-bs-target="#SerieCarousel" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" aria-current="true" {% endif %} aria-label="Slide {{ loop.index }}"></button>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</section>

		<!-- Collections correspondantes -->
		<section class="search-results-section">
			<div class="section-header d-flex justify-content-between align-items-center">
				<h3>Collections correspondantes</h3>
				<span class="results-count">({{ collections|length }}
					résultats)</span>
			</div>

			<div id="CollectionCarousel" class="carousel slide results-carousel" data-bs-ride="carousel">
				<div class="carousel-inner">
					{% for collectionBatch in collections|batch(3, '') %}
						<div class="carousel-item {% if loop.first %}active{% endif %}">
							<div class="row g-4">
								{% for collection in collectionBatch %}
									{% if collection != '' %}
										<div class="col-12 col-sm-6 col-md-4">
											<div class="result-card card">
												<img src="{{ collection.lienAffiche }}" class="card-img-top" alt="{{ collection.titreCollection }}">
												<div class="card-body">
													<h5 class="card-title {% if collection.titreCollection|length > 20 %}long-title{% endif %}">
														{{ collection.titreCollection }}
													</h5>
													<p class="card-text">{{ collection.description|slice(0, 100) ~ '...' }}</p>
												</div>
												<div class="card-footer text-center">
													<a href="index.php?controller=collection&methode=afficherCollection&tmdb_id={{ collection.id }}" class="btn btn-myprimary">Voir la collection</a>
												</div>
											</div>
										</div>
									{% endif %}
								{% endfor %}
							</div>
						</div>
					{% endfor %}
				</div>

				{% if collections|length > 3 %}
					<button class="carousel-control-prev" type="button" data-bs-target="#CollectionCarousel" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Précédent</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#CollectionCarousel" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Suivant</span>
					</button>

					<div class="carousel-indicators">
						{% for batch in collections|batch(3) %}
							<button type="button" data-bs-target="#CollectionCarousel" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" aria-current="true" {% endif %} aria-label="Slide {{ loop.index }}"></button>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</section>

		<!-- Fils de discussion correspondants -->
		<section class="search-results-section">
			<div class="section-header d-flex justify-content-between align-items-center">
				<h3>Fils de discussion correspondants</h3>
				<span class="results-count">({{ fils|length }}
					résultats)</span>
			</div>

			<div id="ThreadsCarousel" class="carousel slide results-carousel" data-bs-ride="carousel">
				<div class="carousel-inner">
					{% if fils|length > 4 %}
						<button class="carousel-control-prev" type="button" data-bs-target="#ThreadsCarousel" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Précédent</span>
						</button>
					{% endif %}

					<div class="carousel-inner {% if fils|length < 4 %} container text-align-center{% endif %}">
						{% if fils is not empty %}
							{% for threadBatch in fils|batch(4, '') %}
								<div class="carousel-item {% if loop.first %}active{% endif %}">
									<div class="row row-cols-1 row-cols-md-3 g-4">
										{% for thread in threadBatch %}
											{% if thread != '' %}
												<div class="col-md-3 d-flex align-items-stretch">
													<div class="card mb-4 h-100 d-flex flex-column">
														<div class="card-header">
															<img src="{{ thread.getUtilisateur().getUrlImageProfil() }}" class="rounded-circle" style="width: 30px; height: 30px;" alt="{{ thread.getUtilisateur().getPseudo() }}">
															<span class="ms-2">{{ thread.getUtilisateur().getPseudo() }}</span>
														</div>
														<div class="card-body d-flex flex-column">
															<h5 class="card-title">{{ thread.titre }}</h5>
															<p class="card-text">{{ thread.description }}</p>
															<div class="themes-container">
																{% for theme in thread.getThemes()|slice(0, 6) %}
																	<span class="badge bg-myprimary me-1">{{ theme.nom }}</span>
																	{% if loop.index is even %}
																		<br>
																	{% endif %}
																{% endfor %}
															</div>
														</div>
														<div class="card-footer">
															<a href="index.php?controller=fil&methode=afficherFilParId&id_fil={{ thread.id }}" class="btn btn-myprimary">Voir le fil</a>
														</div>
													</div>
												</div>
											{% endif %}
										{% endfor %}
									</div>
								</div>
							{% endfor %}
						{% endif %}
					</div>

					{% if fils|length > 4 %}
						<button class="carousel-control-next" type="button" data-bs-target="#ThreadsCarousel" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Suivant</span>
						</button>
					{% endif %}
				</div>

				{% if fils|length > 4 %}
					<div class="carousel-indicators">
						{% for fil in fils|batch(4, '') %}
							<button type="button" data-bs-target="#ThreadsCarousel" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" aria-current="true" {% endif %} aria-label="Slide {{ loop.index }}"></button>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</section>
	</div>
{% endblock %}
