{% extends 'base_template.html.twig' %}

{% block title %}
    VHS | Quizz
{% endblock %}

{% block content %}
<main class="container flex-fill">
    <br>
    <h1>Création des questions</h1>
    <br>

    <form id="quizzForm" action="index.php" method="get">
        <input type="hidden" name="controller" value="quizz">
        <input type="hidden" name="methode" value="creerQuestion">
        <input type="hidden" name="idQuizz" value="{{ idQuizz }}">

        <h3>Question n°{{ numQuestion }}</h3>
        <div class="card bg-mydark mx-auto my-auto p-4 text-white rounded">
            <!-- Champ Image -->
            <div class="row mb-4" style=" margin: 1px;">
                <label for="image_{{ numQuestion }}" class="col-form-label">Ajouter une image</label>
                <input type="file" name="image_{{ numQuestion }}" id="image"/>
            </div>
            <!-- Champ Titre -->
            <div class="row mb-4" style=" margin: 1px;">
                <label for="titre_{{ numQuestion }}">Entrez la question</label>
                <textarea name="titre_{{ numQuestion }}" id="titre" class="rounded" placeholder="Saisir la question..." required></textarea>
            </div>
            <!-- Bouton d'ajout de réponses -->
            <div class="row" style=" margin: 1px;">
                <button type="button" class="btn btn-primary" id="addReponseBtn">
                    <i class="bi bi-pencil" style="font-size: 1.3rem; margin-right: 0.2 rem;"></i>
                    <b>Ajouter une réponse</b>
                </button>
            </div>
            <!-- Champ des réponses -->
            <div id="reponsesContainer">
            </div>
            <!-- Boutons de manipulation de la page -->
            <div class="row text-center mt-4">
                <div class="row col mt-4 mb-2 me-4">
                    <a href="index.php?controller=quizz&methode=listeQuizz" class="btn btn-primary">
                        <b>Annuler</b>
                    </a>
                </div>
                <div class="row col mb-2 mt-4">
                    <a href="index.php?controller=quizz&methode=traiterInfosQuestion&idQuizz={{ idQuizz }}&numQuestion={{ numQuestion }}&nbQuestions={{ nbQuestions }}&idUtilisateur={{ idUtilisateur }}" class="btn btn-primary">
                        <b>Suivant</b>
                    </a>
                </div>
            </div>
        </div>
    </form>
</main>

<script src="js/quizz.js"></script>

{% endblock %}
